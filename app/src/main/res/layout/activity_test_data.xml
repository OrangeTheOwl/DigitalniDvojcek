<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TestDataActivity">

    <!-- Gumb za generiranje podatkov -->
    <Button
        android:id="@+id/buttonGenerateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Generate Test Data"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Gumb za poÅ¡iljanje podatkov -->
    <Button
        android:id="@+id/buttonSendData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send to Database"
        app:layout_constraintTop_toBottomOf="@+id/buttonGenerateData"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- RecyclerView za prikaz podatkov -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTestData"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSendData"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        tools:listitem="@layout/item_event" />

</androidx.constraintlayout.widget.ConstraintLayout>
